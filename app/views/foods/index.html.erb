
<% if @query.present? %>
  <%= link_to 'Home', root_path %>

  <h1><%= @total %> results for food with <%= @query %></h1>

  <% @foods.each_with_index do |food, index| %>
    <div id="food-<%= index + 1 %>"><h3><%= index + 1 %>. <%= food.code %></h3>
    <p>Description: <%= food.description.capitalize %></p>
    <p>Brand Owner: <%= food.brand.capitalize %></p>
    <p>Ingredients: <%= food.ingredients.capitalize %></p></div></br>
  <% end %>
<% else %>
  <h3>Error:</h3><p>Please <%= link_to 'search', root_path %> for an ingredient.</p>
<% end %>